= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  %table.board
    %thead
      %tr
        %td.header
        - @game.columns.each do |col|
          %td.header
            .header_label=col
        
    %tbody
      -@game.rows.each do |row|
        %tr
          %td.header
            .header_label=row
          -@game.columns.each do |col|
            %td
              - if @game.has_cell_been_guessed col, row
                - if @game.get_guess_at(col, row).is_hit
                  .peg.hit
                -else
                  .peg.miss
              - else
                #{t @game.get_cell_value col, row}


  .actions
    = f.submit 'Save'

= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  %table.board
    %thead
      %tr
        %td.header
        - @game.Columns.each do |col|
          %td.header
            .header_label=col
        
    %tbody
      -@game.Rows.each do |row|
        %tr
          %td.header
            .header_label=row
          -@game.Columns.each do |col|
            %td
              .cell_label #{t row+col}


  .actions
    = f.submit 'Save'

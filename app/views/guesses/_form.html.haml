= form_for @guess do |f|
  - if @guess.errors.any?
    #error_explanation
      %h2= "#{pluralize(@guess.errors.count, "error")} prohibited this guess from being saved:"
      %ul
        - @guess.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :game
    = f.text_field :game
  .field
    = f.label :guess_value
    = f.number_field :guess_value
  .actions
    = f.submit 'Save'
